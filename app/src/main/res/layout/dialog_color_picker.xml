<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fab_margin"
    android:id="@+id/colorPickerBackground">



    <com.skydoves.colorpickerpreference.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:palette="@drawable/palette"
        app:selector="@drawable/wheel"
        android:layout_above="@id/color_picker_cancel"/>

    <Button
        android:id="@+id/color_picker_cancel"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/color_picker_save"
        android:text="CANCEL" />
    <Button
       android:layout_alignParentBottom="true"
        android:text="SAVE"
        android:id="@+id/color_picker_save"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
